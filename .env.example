# Application Settings
APP_NAME=51CTO Backend API
APP_VERSION=1.0.0
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8002

# CORS Settings (change * to specific domains in production)
CORS_ORIGINS=*

# Crawler Settings
# 主要控制：爬取到此文章 ID 为止（推荐使用）
MIN_ARTICLE_ID=33500

# 爬取延迟（秒）
CRAWLER_DELAY=2.0

# 备用限制：最大页数（通常不会达到，设置大一点）
MAX_PAGES=999

# Cache Settings
ENABLE_CACHE=true
CACHE_UPDATE_INTERVAL=3600
CACHE_INITIAL_LOAD=true

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
